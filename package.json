{
  "name": "peach-share",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "docker:emu": "docker compose -p peachshare-emu -f docker/docker-compose.base.yml -f docker/docker-compose.dev.yml --profile emu up --build --wait",
    "docker:emu:down": "docker compose -p peachshare-emu -f docker/docker-compose.base.yml -f docker/docker-compose.dev.yml --profile emu down",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "biome check .",
    "lint:fix": "biome check --write --unsafe",
    "typecheck": "tsc -b",
    "test:unit": "vitest run --project unit",
    "test:int": "vitest run --project integration",
    "test:e2e:vitest": "vitest run --project e2e-vitest",
    "test:e2e:wdio": "wdio run ./wdio.conf.ts",
    "test:e2e:wdio:headless": "HEADLESS=1 wdio run ./wdio.conf.ts",
    "test:e2e:wdio:docker": "./docker/scripts/run-e2e.sh",
    "ci:local": "act --pull=false --workflows .github/workflows/ci.yml -P ubuntu-latest=catthehacker/ubuntu:act-22.04 -e .github/workflows/act.event.json pull_request",
    "preflight": "./.husky/pre-push"
  },
  "dependencies": {
    "@noble/hashes": "^2.0.1",
    "@solidjs/router": "^0.15.3",
    "firebase": "^12.3.0",
    "flowbite": "^3.1.2",
    "solid-js": "^1.9.9",
    "vitest": "^3.2.4",
    "xstate": "^5.22.1"
  },
  "devDependencies": {
    "@avahq/wrtc": "0.7.6-fixondata.1",
    "@biomejs/biome": "^2.2.5",
    "@tailwindcss/vite": "^4.1.13",
    "@testing-library/webdriverio": "^3.2.1",
    "@types/dockerode": "^3.3.44",
    "@types/node": "^24.7.2",
    "@wdio/cli": "^9.20.0",
    "@wdio/globals": "^9.17.0",
    "@wdio/junit-reporter": "^9.20.0",
    "@wdio/local-runner": "^9.20.0",
    "@wdio/mocha-framework": "^9.20.0",
    "@wdio/spec-reporter": "^9.20.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "tailwindcss": "^4.1.13",
    "testcontainers": "11.7.1",
    "typescript": "~5.9.3",
    "vite": "^7.1.7",
    "vite-plugin-solid": "^2.11.8",
    "wdio-wait-for": "^3.1.0",
    "webdriverio": "^9.20.0"
  }
}
