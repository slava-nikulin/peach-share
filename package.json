{
  "name": "webrtc-share",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "docker:emu": "docker compose -f docker/docker-compose.dev.yml --profile emu up",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "biome check .",
    "lint:fix": "biome check --write --unsafe",
    "typecheck": "tsc -b",
    "test": "vitest run",
    "test:unit": "vitest run --project unit",
    "test:int": "vitest run --project integration",
    "test:e2e": "vitest run --project e2e",
    "ci:local": "act -P ubuntu-latest=catthehacker/ubuntu:act-22.04 push -e .github/workflows/act.event.json",
    "prepare": "husky"
  },
  "dependencies": {
    "@solidjs/router": "^0.15.3",
    "firebase": "^12.3.0",
    "flowbite": "^3.1.2",
    "solid-js": "^1.9.9",
    "vitest": "^3.2.4",
    "xstate": "^5.22.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@tailwindcss/vite": "^4.1.13",
    "@types/dockerode": "^3.3.44",
    "@types/node": "^24.7.2",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "tailwindcss": "^4.1.13",
    "testcontainers": "11.7.1",
    "typescript": "~5.9.3",
    "vite": "^7.1.7",
    "vite-plugin-solid": "^2.11.8"
  }
}
