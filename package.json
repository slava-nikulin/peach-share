    "vitest": "^3.2.4",
    "xstate": "^5.22.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@tailwindcss/vite": "^4.1.13",
    "@types/dockerode": "^3.3.44",
    "jsdom": "^27.0.0",
    "tailwindcss": "^4.1.13",
    "testcontainers": "11.7.1",
    "typescript": "~5.8.3",
    "vite": "^7.1.7",
    "vite-plugin-solid": "^2.11.8"
